{% for listAnimal in listAnimals %}

	<div class="container col-md-12">
		<div class="card d-flex flex-row">
			<img class="card-img-top w-50" src="{{ "assets/images/" ~ listAnimal.img }}" alt="Card image cap">
			<div class="card-body">
				<h5 class="card-title">{{ listAnimal.name }}</h5>
				<p class="card-text">{{ listAnimal.description }}</p>
			</div>
		</div>
	</div>
{% endfor %}
