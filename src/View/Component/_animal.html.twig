{% for listAnimal in listAnimals %}
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{ "assets/images/" ~ listAnimal.img }}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{ listAnimal.name }}</h5>
    <p class="card-text">{{ listAnimal.description }}</p>
  </div>
</div>
{% endfor %}
