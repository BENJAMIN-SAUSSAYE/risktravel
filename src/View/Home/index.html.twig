{% extends 'layout.html.twig' %}
{% block stylesheet %}
	{{ parent() }}
{% endblock %}
{% block header %}
	<header>
		<div class="bg-secondary-subtle">
			<div class="container py-4">
				<h1 class="display-3">TRAVEL RISK</h1>
				<p>Vous aimez le gout du risque ?<br>
					Nous vous prorposons des voyages FUN !</p>
				<hr>
			</div>
		</div>
	</header>
{% endblock %}
{% block content %}
	<main role="main">
		<div class="container py-4">
			<div class="row justify-content-between align-items-center">
				<div
					class="col-md-12 shadow-sm rounded">

					<!--dropdown DEPART  -->
					<div class="input-group mb-3">
						<select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
							<option selected>Depart...</option>
							<option value="Allemagne">Allemagne</option>
							<option value="France">France</option>
							<option value="Italie">Italie</option>
						</select>
					</div>
					<!--dropdown DEPART  -->

					<!--dropdown ARRIVEE  -->
					<div class="input-group mb-3">
						<select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
							{% for listCountryRisk in listCountriesRisk %}
								{% if listCountryRisk['score'] >= 3 %}
									<option selected>{{ listCountryRisk['name'] }}</option>
								{% endif %}
							{% endfor %}
						</select>
					</div>

					<!--dropdown ARRIVEE  -->
					<p>
						<a class="btn btn-secondary" href="#" role="button">Valider</a>
					</p>
				</div>
			</div>
			<hr>
		</div>
	{% block animal %}
		{% include 'Component/_animal.html.twig' %}
	{% endblock %}
	{% block arme %}
		{% include 'Component/_arme.html.twig' %}
	{% endblock %}
	</main>
{% endblock %}
